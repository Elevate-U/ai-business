{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "functions": {
    "api/tmdb/[...path].js": {
      "runtime": "edge",
      "memory": 256,
      "maxDuration": 30
    },
    "api/stream-url.js": {
      "runtime": "edge",
      "memory": 256,
      "maxDuration": 30
    },
    "api/image-proxy.js": {
      "runtime": "edge",
      "memory": 512,
      "maxDuration": 30
    },
    "api/image.js": {
      "runtime": "edge", 
      "memory": 512,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
} 